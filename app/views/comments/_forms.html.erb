<h3>Add Comment</h3>
<%= form_for ([@post, @post.comments.build]) do |f| %>
    <p>
        <%= f.label :username %>:
        <%= f.text_field :username, {:class => "form-control"} %><br />
    </p>      
 
    <p>
        <%= f.label :body %>:
        <%= f.text_area :body, {:class => "form-control"} %><br />
    </p> 
    <p>
        <%= f.submit({:class => "btn btn-secondary"})%>
    </p>
<% end %>
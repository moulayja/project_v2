<h3>Comments:</h3>
<br>

<% @post.comments.each do |comment| %>
  <div class="card card-body bg-light cardino">

        <p class = "gracie"><span class = "text-success"><strong><%= comment.username%>:&nbsp<strong></span>
        <span class = "text-secondary"><%=comment.body%></span>
        <%= link_to "   (x)", [comment.post, comment],
                        method: :delete,
                        data: {confirm: "Are you sure you want to delete this comment?"},
                        class:'text-danger' %> 
        </p>
    </div><br>
<% end %>









